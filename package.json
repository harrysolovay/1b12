{
  "private": true,
  "type": "module",
  "workspaces": ["app", "experimental_client", "domain", "server"],
  "scripts": {
    "prepare": "ts-patch install -s",
    "build": "tspc -b",
    "watch": "tspc -b -w",
    "dc:up": "docker compose up",
    "dc:rm": "docker compose down -v",
    "dc:re": "bun dc:rm && bun dc:up",
    "db:init": "rm -rf migrations && bun tasks/ensure_uuid_extension && drizzle-kit generate && drizzle-kit migrate"
  },
  "devDependencies": {
    "@effect/language-service": "^0.23.5",
    "@effect/platform-bun": "^0.69.16",
    "@effect/sql-pg": "^0.42.0",
    "@tim-smart/openapi-gen": "^0.4.13",
    "@types/bun": "^1.2.18",
    "@types/node": "^22.16.3",
    "@types/react": "~19.0.14",
    "dprint": "^0.50.1",
    "drizzle-kit": "^0.31.4",
    "effect": "^3.16.13",
    "ts-patch": "^3.3.0",
    "typescript": "^5.8.3"
  }
}
